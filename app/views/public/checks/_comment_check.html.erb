<% if comment.checked_by?(current_member) %>
  <%= link_to recipe_comment_checks_path(recipe,comment), method: :delete, remote: true do %>
    <i class="fas fa-check-circle fa-lg" style="color: #f44850;"></i>
  <% end %>
<% else %>
  <%= link_to recipe_comment_checks_path(recipe,comment), method: :post, remote: true do %>
    <i class="far fa-circle fa-lg"></i>
  <% end %>
<% end %>