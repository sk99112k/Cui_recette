<div class="container">
  <div class="row">
    <div class="mx-auto offset-sm-1">
      <h3 class="m-5">レシピ新規投稿</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 col-xs-12" style="background:#F5DEB3; border-radius: 20px;">
      
      <%= form_with model: @recipe do |f| %>
      <div class="field mt-4 text-center">
        <table class="table table-borderless">
          <tr>
            <td><%= f.labe :image, "写真" %></td>
            <td><%= f.file_field :image, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :title, "レシピ名", autocomplete: "title" %></td>
            <td><%= f.text_field :title %></td>
          </tr>
          <tr>
            <td><%= f.label :, "材料" %></td>
            <td><%= f.text_field :l %></td>
          </tr>
          <tr>
            <td><%= f.label :price, "値段" %></td>
            <td><%= f.text_field :price, size: 18, placeholder: "1000" %> 円</td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "登録" %></td>
          </tr>
        </table>
      </div>
      <% end %>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>