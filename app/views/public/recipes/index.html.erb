<div class="container">
  <div style="display:flex;">
    <div class="genre_search">
      <h5>ジャンル一覧</h5>
      <table class="table">
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, genre_search_path(genre) %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="mx-auto offset-sm-1">
      <h3 class="m-5">レシピ一覧</h3>
    </div>
  </div>
  <%= render 'public/recipes/recipe', recipes: @recipes %>
</div>