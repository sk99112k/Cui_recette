<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table class="table table-borderless">
        <tr>
          <td><%#= @recipe.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td><%#= image_tag @recipe.get_image(100,100) %></td>
        </tr>
        <tr>
          <th><%#= @recipe.title %></th>
        </tr>
      </table>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table table-hover mt-5">
        <tr>
          <th>材料</th>
          <td><%#= @recipe.list.ingredient %></td>
          <td><%#= @recipe.quantity %></td>
        </tr>
        <tr>
          <th>作り方</th>
          <td><%#= @recipe.body %></td>
        </tr>
      </table>
    </div>
  </div>
</div>