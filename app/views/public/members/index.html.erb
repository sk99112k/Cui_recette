<div class="container">
  <div class="row">
    <div class="mx-auto m-5">
      <h3>ユーザー一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-9 px-sm-0 mx-auto mb-5">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>名前</th>
            <th>レシピ数</th>
          </tr>
        </thead>
        <% @members.each do |member| %>
        <tbody>
          <tr>
            <td><%=link_to member_path(member), class: "btn btn-link" do %><%= member.name %><% end %></td>
            <td><%= member.recipes.count %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>