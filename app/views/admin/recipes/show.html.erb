<div class="container">
  <div class="row">
    <div class="mx-auto m-5 text-center">
      <h3><%= @recipe.title %></h3>
      <p>作成者<span class="ml-5"><%= @recipe.member.name %></span></p>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 px-sm-0 mx-auto mb-5">
      <h4 class="text-left">コメント</h4>
      <table class="table table-hover">
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= comment.member.name %></td>
          <td><%= comment.body %></td>
          <td>
            <% if current_admin.email != 'guest@example.com' %>
              <%= link_to "削除", admin_recipe_comment_path(comment.recipe,comment), method: :delete, style: "color: #DC143C;", class: "btn btn-link", "data-confirm" => "本当に削除しますか？" %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </table>

      <%= paginate @comments, theme: 'bootstrap-5' %>

      <div class="back_btn">
        <%= link_to admin_recipes_path do %><i class="fas fa-angle-double-left"></i> <span>レシピ一覧に戻る</span><% end %>
      </div>
    </div>
  </div>
</div>