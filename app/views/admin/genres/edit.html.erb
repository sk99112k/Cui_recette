<div class="container">
  <div class="row">
    <div class="mx-auto m-5">
      <h3>ジャンル名編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto m-5 text-center">
      <%= form_with model: @genre, url:admin_genre_path(@genre.id), method: :patch, local: true do |f| %>
      <%= f.text_field :name, autofocus: true %>
      <%= f.submit "変更を保存" %>
      <div class="error">
        <% if @genre.errors.any? %>
          <%= @genre.errors.count %>件のエラーがあります
          <ul>
            <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
