<div class="container">
  <%= flash[:notice] %>
  <div class="row">
    <div class="mx-auto m-5">
      <h3>ユーザー一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-9 px-sm-0 mx-auto mb-5">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>名前</th>
            <th>レシピ数</th>
            <th>コメント数</th>
          </tr>
        </thead>
        <% @members.each do |member| %>
        <tbody>
          <tr>
            <td><%= link_to admin_member_path(member) do %><%= member.name %><% end %></td>
            <td><%= link_to admin_member_path(member) do %><%= member.recipes.count %> 件<% end %></td>
            <td><%= link_to admin_member_path(member) do %><%= member.comments.count %> 件<% end %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>